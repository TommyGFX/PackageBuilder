<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com/XSD/groupoptions.xsd">
	<import>
		<categories>
			<category name="admin.source">
				<parent>admin</parent>
			</category>
			
			<category name="user.source">
				<parent>user</parent>
			</category>
			
			<category name="user.source.dynamic">
				<parent>user.source</parent>
			</category>
			
			<category name="user.source.general">
				<parent>user.source</parent>
			</category>
			
			<category name="user.source.profiles">
				<parent>user.source</parent>
			</category>
		</categories>
		
		<options>
			<!-- admin.general -->
			<option name="admin.general.canViewPBOffline">
				<categoryname>admin.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<!-- /admin.general -->

			<!-- admin.source -->
			<option name="admin.source.canViewSources">
				<categoryname>admin.source</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<enableoptions><![CDATA[admin.source.canAddSources,admin.source.canEditSources,admin.source.canDeleteSources]]></enableoptions>
			</option>
			<option name="admin.source.canAddSources">
				<categoryname>admin.source</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="admin.source.canEditSources">
				<categoryname>admin.source</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="admin.source.canDeleteSources">
				<categoryname>admin.source</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<!-- /admin.source -->

			<!-- user.source.general -->
			<option name="user.source.general.canViewSources">
				<categoryname>user.source.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<!-- /user.source.general -->
			
			<!-- user.source.profiles -->
			<option name="user.source.profiles.canUseProfiles">
				<categoryname>user.source.profiles</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			
			<option name="user.source.profiles.canManageProfiles">
				<categoryname>user.source.profiles</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<!-- /user.source.profiles -->
		</options>
	</import>
</data>